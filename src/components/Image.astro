---
export interface Props {
	name: string;
}

const { name } = Astro.props;
---

<div
  id="movie"
  class="pt-6 px-4 pb-20 min-h-[50vh] w-full grid place-content-center"
>
  <div class="grid gap-10 xl:grid-cols-2 max-w-7xl">
    <div class="grid grid-cols-3 gap-6">
      <div class="space-y-2 text-center">
        <img
          width="150"
          height="220"
          alt={ name + ' title'}
          src={'http://localhost:8080/image/'+name+'?w=150&h=220&t=1'}
          class="bg-black border border-black bg-opacity-5 rounded-box border-opacity-5"
        />
        <h3 class="font-bold capitalize">{name} Title</h3>
        <p class="text-xs opacity-60">Description</p>
      </div><div class="space-y-2 text-center">
        <img
          width="150"
          height="220"
          alt={ name + ' title'}
          src={'http://localhost:8080/image/'+name+'?w=151&h=221&t=2'}
          class="bg-black border border-black bg-opacity-5 rounded-box border-opacity-5"
        />
        <h3 class="font-bold capitalize">{name} Title</h3>
        <p class="text-xs opacity-60">Description</p>
      </div><div class="space-y-2 text-center">
        <img
          width="150"
          height="220"
          alt={ name + ' title'}
          src={'http://localhost:8080/image/'+name+'?w=152&h=222&t=3'}
          class="bg-black border border-black bg-opacity-5 rounded-box border-opacity-5"
        />
        <h3 class="font-bold capitalize">{name} Title</h3>
        <p class="text-xs opacity-60">Description</p>
      </div>
    </div>
    <div>
      <div>
        <h2
          class="flex items-center mb-5 text-lg font-black md:text-xl xl:text-2xl capitalize"
        >
          <svg
            class="w-8 h-8 fill-current text-primary"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 32 32"
            ><path
              d="M 4 4 L 4 28 L 28 28 L 28 4 Z M 6 6 L 8 6 L 8 7 L 10 7 L 10 6 L 22 6 L 22 7 L 24 7 L 24 6 L 26 6 L 26 26 L 24 26 L 24 25 L 22 25 L 22 26 L 10 26 L 10 25 L 8 25 L 8 26 L 6 26 Z M 8 9 L 8 11 L 10 11 L 10 9 Z M 22 9 L 22 11 L 24 11 L 24 9 Z M 8 13 L 8 15 L 10 15 L 10 13 Z M 22 13 L 22 15 L 24 15 L 24 13 Z M 8 17 L 8 19 L 10 19 L 10 17 Z M 22 17 L 22 19 L 24 19 L 24 17 Z M 8 21 L 8 23 L 10 23 L 10 21 Z M 22 21 L 22 23 L 24 23 L 24 21 Z"
            ></path></svg
          >
          <span class="w-2"></span> Random {name} poster
        </h2>
        <p class="mb-5 text-xl"></p>
      </div>
      <div class="mockup-code text-left w-full max-w-[90vw] relative">
        <div class="absolute top-2 right-2">
          <div data-tip="copy" class="tooltip tooltip-left tooltip-primary">
            <button class="btn btn-square btn-ghost btn-sm"
              ><svg
                class="w-5 h-5 fill-current"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 32 32"
                ><path
                  d="M 16 3 C 14.742188 3 13.847656 3.890625 13.40625 5 L 6 5 L 6 28 L 26 28 L 26 5 L 18.59375 5 C 18.152344 3.890625 17.257813 3 16 3 Z M 16 5 C 16.554688 5 17 5.445313 17 6 L 17 7 L 20 7 L 20 9 L 12 9 L 12 7 L 15 7 L 15 6 C 15 5.445313 15.445313 5 16 5 Z M 8 7 L 10 7 L 10 11 L 22 11 L 22 7 L 24 7 L 24 26 L 8 26 Z"
                ></path></svg
              ></button
            >
          </div>
        </div>
        <pre><code class="pr-4 text-sm">http://localhost:8080/image<span class="text-primary">/{name}</span>?w=<span class="text-primary">150</span>&amp;h=<span class="text-primary">220</span></code></pre>
      </div>
    </div>
  </div>
</div>
